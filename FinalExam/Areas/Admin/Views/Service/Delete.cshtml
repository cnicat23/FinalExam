@model Service
<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-action="DeletePost" method="post">
                <div class="card" style="width: 18rem;">
                    <img src="~/uploads/images/@Model.ImageUrl" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@Model.ImageUrl</h5>
                        <p class="card-text">@Model.Description</p>
                        <input asp-for="@Model.Id" hidden value="@Model.Id" />
                        <a asp-action="Index" class="btn btn-primary">Go back</a>
                        <button type="submit" class="btn btn-primary">Delete</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

